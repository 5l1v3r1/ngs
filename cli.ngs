}

rl = Readline()

n = 1
while true {
	l = rl.read("NGS v0.0.1 " + String(n) + " > ")
	n = n + 1
	# echo("GOT", l)
	if l == "exit" {
		break
	}
	code = compile(l)
	if not(code[0]) {
		echo("ERROR", code[1])
		continue
	}
	# echo("COMPILED OK")
	lambda_ = load(code[1])
	result = lambda_()
	echo(result)
}


{
	rl.close()
}