# ----- Seq - start -----

# Not the most efficient :/
# I wonder why all other languages return -1 for not found.
defg pos(s:Seq, subseq:Seq, start:Number=0) {
	sl = s.len()
	ssl = subseq.len()
	if sl < ssl {
		return null
	}
	j = sl - ssl + 1

	for(i=start; i<j; i=i+1) {
		if slice(s, i, ssl) == subseq {
			return i
		}
	}
	return null
}

defg split(s:Seq, delim:Seq) {
	sl = s.len()
	dl = delim.len()
	ret = []
	start = 0
	while (i=s.pos(delim, start)) != null {
		ret.push(s.slice(start, i-start))
		start = i + dl
	}
	if(start<sl) {
		ret.push(s.slice(start, sl-start))
	}
	ret
}


defg zip(a:Seq, b:Seq) {
