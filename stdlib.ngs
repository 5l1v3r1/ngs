defg values(h:Hash) { h.map(@Y) }
defg values(s:Seq) { s }

defg zip(a:Seq, b:Seq) {
	l = len(a)

	if l != b.len() {
		throw ['args', 'Zip with different Seqs length']
	}

	l.map(@[a[X], b[X]])
}

defg __neq(a, b) { not(a==b) }

# Don't make it Seq. It causes infinite recursion I guess.
defg __eq(a:Array, b:Array) {
	a.len() == b.len()
	and
	all(zip(a,b), @ X[0] == X[1])
}

defg __eq(a:Hash, b:Hash) {
	a.len() == b.len()
	and
	a.keys().sort() == b.keys().sort()
	and
	all(a.keys(), @ a[X] == b[X])
}

defg __eq(a:Thread, b:Thread) { a.id == b.id }

defg map(s:Seq, mapper:F, *args) { s.len().map(@mapper(s[X], *args)) }

defg map(n:Number, mapper:F, *args) {
	ret = []
	for(i=0;i<n;i=i+1) {
		ret.push(mapper(i, *args))
	}
	ret
}

defg map(h:Hash, mapper:F, *args) { h.keys().map(@mapper(X, h[X], *args)) }

defg reduce(s:Seq, start, reducer:F) {
	acc = start
	s.each(F(x) { acc = reducer(acc, x) })
	acc
}

defg sum(a:Array) { reduce(a, 0, __add) }

defg each(s:Seq, processor:F, *args) {
	j = s.len()
	for(i=0;i<j;i=i+1) {
		processor(s[i], *args)
	}
	s
}

defg each(n:Number, processor:F, *args) {
	for(i=0;i<n;i=i+1) {
		processor(i, *args)
	}
}

defg any(s:Seq, predicate:F, *args) {
	j = s.len()
	for(i=0;i<j;i=i+1) {
		if predicate(s[i], *args) {
			return true
		}
	}
	false
}

defg all(s:Seq, predicate:F, *args) {
	j = s.len()
	for(i=0;i<j;i=i+1) {
		if not(predicate(s[i], *args)) {
			return false
		}
	}
	true
}

defg none(s:Seq, predicate:F, *args) {
	not(any(s, predicate, *args))
}

defg filter(s:Seq, predicate:F, *args) {
	ret = []
	j = s.len()
	for(i=0;i<j;i=i+1) {
		if predicate(s[i], *args) {
			ret.push(s[i])
		}
	}
	ret
}

