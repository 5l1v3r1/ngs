defg startsWith(s:Seq, pfx:Seq) {
	not(len(s) < len(pfx))
	and
	s.slice(0, pfx.len()) == pfx
}

defg endsWith(s:Seq, sfx:Seq) {
	l = sfx.len()
	if len(s) < l {
		return false
	}
	s.slice(s.len() - l, l) == sfx
}

# Not sure, maybe Seq? Need use cases. For String it's: fname - '.txt' + '.bak'
defg __sub(s:String, sfx:String) {
	if s.endsWith(sfx) {
		s.slice(0, s.len() - sfx.len())
	} else {
		# throw maybe?
		s
	}
}

# XXX: Warning: should be per Context or it will bite you
defg spawn_update_globals(args:Array, p:Process) {
	g = globals()
	g['P'] = p
	if 'PP' not in g {
		g['PP'] = {}
	}
	g['PP'][args[0]] = p

	# Hack for CLI
	thread().locals()['P'] = p
}

defg spawn(*args) {
	# TODO: handle async
	p = native_spawn(*args)
	spawn_update_globals(args, p)
	p.wait()
	ok = cmd_finished_ok_p(p)
	if not(ok) {
		# TODO: nicer output of the args
		# TODO: output stack trace
		throw ['runtime', 'Command execution failed: ' + inspect(args)]
	}
	p
}

defg spawn(*args) {
	guard args.map(typeof).any(__neq, 'String')
	__super(*args.map(String))
}

# Convert execution of (example) '-f somefile' to 'test -f somefile'
defg spawn(*args) {
	  guard args.len() > 1
	  guard startsWith(args[0], '-')
	  args = ['test'] + args
	  return spawn(*args)
}

