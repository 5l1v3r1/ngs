# string * number -> the string repeated number times
defg __mul(s:String, n:Number) {
	n.map(@s).join()
}

# TODO: maybe generic for Seq
defg fill(s:String, n:Number) {
	t = n - s.len()
	if t < 1 { return s }
	s + ' ' * t
}

defg __match(s:String, n:Number) { s.len() == n }

defg strip(s:Seq, elts:Seq) {
	l = s.len()
	i = 0
	while i < l and s[i] in elts {
		i = i + 1
	}
	j = l-1
	while j > i and s[j] in elts {
		j = j - 1
	}
	s.slice(i, j-i+1)
}

defg strip(s:String) { strip(s, " \t\r\n") }

# Not the most efficient :/
# I wonder why all other languages return -1 for not found.
defg pos(s:Seq, subseq:Seq, start:Number=0) {
	sl = s.len()
	ssl = subseq.len()
	if sl < ssl {
		return null
	}
	j = sl - ssl + 1

	for(i=start; i<j; i=i+1) {
		if slice(s, i, ssl) == subseq {
			return i
		}
	}
	return null
}

defg split(s:Seq, delim:Seq) {
	sl = s.len()
	dl = delim.len()
	ret = []
	start = 0
	while (i=s.pos(delim, start)) != null {
		ret.push(s.slice(start, i-start))
		start = i + dl
	}
	if(start<sl) {
		ret.push(s.slice(start, sl-start))
	}
	ret
}

defg split(s:String) { split(s, ' ') }

defg split(p:Process, *args) { split(p.stdout.strip(), *args) }

defg Number(s:String) {
	# TODO: checks, negatives, floats, base
	ord_zero = ord('0')
	ret = 0
	s.each(F(ch) { ret = ret * 10 + ord(ch) - ord_zero })
	ret
}

