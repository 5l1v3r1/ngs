defun cmd_finished_ok_p(p:Process) {
	p.exit_code == 0
}

defun cmd_finished_ok_p(p:Process) {
	guard p.cmd == "test"
	p.exit_code in [0,1]
}

defun cmd_finished_ok_p(p:Process) {
	guard p.cmd == "false"
	p.exit_code == 1
}

defun cmd_finished_ok_p(p:Process) {
	guard p.cmd == "service"
	guard p.args[1] == "status"
	# Empirical
	p.exit_code < 4
}

