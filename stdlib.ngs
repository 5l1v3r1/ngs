# act_as(M, ORIG, AS) -> defg M(x:ORIG, *args) { x.as(AS).M(*args) }
# Method M acts on objects of type ORIG as if they are of type AS

defg act_as(method:String, orig_type:Type, as_type:String) {
	defg "$method"(x:orig_type, *args) {
		m = globals()[method]
		m(x.as(as_type), *args)
	}
}

